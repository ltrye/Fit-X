<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8F8"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back" />

        <!-- Illustration -->
        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:src="@drawable/image_frequency"
            android:scaleType="centerInside" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="Welcome, Stefani"
            android:textColor="#1D1617"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Frequency Selection Layout -->
        <LinearLayout
            android:id="@+id/layout_frequency_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:text="Let's us know how often you will workout per week."
                android:textColor="#7B6F72"
                android:textSize="14sp" />

            <!-- Weekly Slots Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/goal_card_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_weekly_slots"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weekly, 3 slots"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Slots Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:text="Slots"
                android:textColor="#1D1617"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Slots Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="40dp">

                <ImageButton
                    android:id="@+id/btn_decrease_slots"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background"
                    android:src="@drawable/ic_minus"
                    android:layout_marginEnd="40dp" />

                <TextView
                    android:id="@+id/tv_slots_count"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#1D1617"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/btn_increase_slots"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background"
                    android:src="@drawable/ic_plus"
                    android:layout_marginStart="40dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Warning Message Layout -->
        <LinearLayout
            android:id="@+id/layout_warning_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Warning Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Please remember !!!"
                android:textColor="#FF6B6B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Warning Message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:text="This app provides guidance but\ndoes not replace a personal trainer."
                android:textAlignment="center"
                android:textColor="#7B6F72"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Action Button -->
        <Button
            android:id="@+id/btn_action"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_login_button"
            android:text="Confirm"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
